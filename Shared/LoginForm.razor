


<EditForm Model="LoginModel" OnValidSubmit="OnValidSubmit">
    <DataAnnotationsValidator/>

<div class="container">
        <div class="row">
                <div class="col col-sm">
                    <div class="card align-middle shadow-lg p-3 mb-5 bg-body rounded">
                        <div class="card-body">
                            <div class="row">
                                <div class="col col-6 col-sm">
                                    <div class="input-group">
                                        <h1>Log In</h1>
                                        <div class="input-group mb-3">
                                        <span class="input-group-text" id="basic-addon1"><i class="fas fa-envelope-open-text"></i> </span>
                                        <InputText type="email" placeholder="Email" class="form-control" @bind-Value="@LoginModel.Email"/>
                                        <div class="input-group mb-3">
                                            <ValidationMessage For="@(() => LoginModel.Email)" />
                                        </div>
                                    
                                        </div>
                                        <div class="input-group mb-3">
                                        <span class="input-group-text" id="basic-addon1"><i class="fas fa-key"></i> </span>
                                        <InputText  type="password" placeholder="Password" class="form-control" @bind-Value="@LoginModel.Password"/>
                                        <div class="input-group mb-3">
                                            <ValidationMessage For="@(() => LoginModel.Password)" />
                                        </div>

                                        </div>
                                        <br/>
                                        <div class="input-group mb-3">
                                            <button type="submit" class="btn btn-primary">Log in</button>
                                        </div>
                                        <br/>
                                        <br/>
                                        <div class="input-group mb-3">
                                            You don't have an account? <a href="/" >Register one!.</a>
                                        </div>
                                        <br/>
                                        <div class="input-group mb-3">
                                            Have you forgot your password? <a href="/" >Please Reset!.</a>
                                        </div>
                                    </div>
                                </div>    
                                <div class="col col-6 col-sm">
                                    
                                        <img src="images/signin-image.jpg" class="align-middle"/>
                                </div> 
                            </div>
                    </div>
                </div>
        </div>
    </div> 
</div>
</EditForm>  

@code{
        [Parameter] public LoginData LoginModel { get; set; }
        [Parameter] public EventCallback OnValidSubmit { get; set; }
        
    }