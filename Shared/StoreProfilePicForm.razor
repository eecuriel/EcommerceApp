@using System.IO
<div class="btn btn-primary">
    <a  @onclick="@ShowModal"><i class="fas fa-camera"></i> Change Store logo</a>
</div>


<Modal @ref="modalRef">
    <ModalContent IsCentered="true">
        <ModalHeader>
            <CloseButton />
        </ModalHeader>
        <ModalBody>
            <ImageFileUpload/>
        </ModalBody>
        <ModalFooter>
            <Button Color="Color.Secondary" Clicked="@HideModal">Close</Button>
            <Button Color="Color.Primary" Clicked="@HideModal">Save Changes</Button>
        </ModalFooter>
    </ModalContent>
</Modal>

@code{
    private Modal modalRef;
    string fileContent;
    int OneMb =1;

    private void ShowModal()
    {
        modalRef.Show();
    }
    private void HideModal()
    {
        modalRef.Hide();
    }

}