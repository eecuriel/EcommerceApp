@using AdminPortal.Services
@inject StoreDataService storeDataService
@inject NavigationManager nav
@inject Blazored.LocalStorage.ILocalStorageService localStorage
@inject HttpClient Http


<EditForm Model="store" OnValidSubmit="OnValidSubmit">
    <DataAnnotationsValidator/>
<div class="container">
    <div class="main-body">
          <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
              <div class="card">
                <div class="card-body">
                  <div class="d-flex flex-column align-items-center text-center">
                    @if(store.StoreLogoImage == null) {
                      <img src="images/blank-profile-picture-png.png" alt="Admin" class="rounded-circle" width="150">
                    }else {
                      <img src="@Http.BaseAddress/@store.StoreLogoImage" alt="Admin" class="rounded-circle" width="150">
                    }
                    <div class="mt-3">
                      <h4>@store.StoreName</h4>
                      <p class="text-secondary mb-1">@store.StoreShortName</p>
                      <StoreProfilePicForm loadPage="HideModal"/>
                    </div>
                </div>
              </div>
            </div>
              <div class="card mt-3">
                <ul class="list-group list-group-flush">
                  <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                    <h6 class="mb-0"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-globe mr-2 icon-inline"><circle cx="12" cy="12" r="10"></circle><line x1="2" y1="12" x2="22" y2="12"></line><path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path></svg>Store URL</h6>
                    <span class="text-secondary"><a href="@storeURL" target="_blank">@storeURL</a></span>
                  </li>
                  <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                    <h6 class="mb-0"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-twitter mr-2 icon-inline text-info"><path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"></path></svg>Twitter</h6>
                    <span class="text-secondary">Twitter Account</span>
                  </li>
                  <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                    <h6 class="mb-0"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-instagram mr-2 icon-inline text-danger"><rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line></svg>Instagram</h6>
                    <span class="text-secondary">Instagram account</span>
                  </li>
                  <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                    <h6 class="mb-0"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-facebook mr-2 icon-inline text-primary"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path></svg>Facebook</h6>
                    <span class="text-secondary">Facebook profile</span>
                  </li>
                  <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                    <h6 class="mb-0"><i class="fab fa-whatsapp"></i> Wathsapp</h6>
                    <span class="text-secondary">Wathsapp contact</span>
                  </li>
                </ul>
              </div>
            </div>
            <div class="col-md-8">
              <div class="card mb-3">
                <div class="card-header">
                  <div class="row">
                      <button type="submit" class="btn btn-primary"> Edit Store</button>
                  </div>
                </div>
                <div class="card-body">
                  
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Owner Name</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <InputText class="form-control" placeholder="Owner Name" @bind-Value="@store.StoreOwnerName" /> 
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Owner Surname</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <InputText class="form-control" placeholder="Owner Surname" @bind-Value="@store.StoreOwerSurname" /> 
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Address 1</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <InputText class="form-control" placeholder="Address 1" @bind-Value="@store.StoreAddress1" />  
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Address 2</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <InputText class="form-control" placeholder="Address 2" @bind-Value="@store.StoreAddress2" />  
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Postal code</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <InputText class="form-control" placeholder="Postal Code" @bind-Value="@store.StorePostalCode" /> 
                    
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Phone Number</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <InputText class="form-control" placeholder="Phone Number" @bind-Value="@store.StorePhone" /> 
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Contact Email</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <InputText class="form-control" placeholder="Email" @bind-Value="@store.StoreContactEmail" /> 
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Longitude</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <InputText class="form-control" placeholder="Longitude" @bind-Value="@store.StoreLongitude" /> 
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Latitude</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <InputText class="form-control" placeholder="Latitude" @bind-Value="@store.StoreLatitude" /> 
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Full Description</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <InputTextArea class="form-control" @bind-Value="@store.StoreFullDescription"  /> 
                    </div>
                  </div>
                    <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Status</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <select class="form-control" @bind="@store.StoreStatus">
                                <option value="Active">Active</option>
                                <option value="Inactive">Inactive</option>
                                <option value="Pending">Pending</option>
                      </select>
                    </div>
                  </div>
                </div>
              </div>
                
              </div>
            </div>
          </div>
        </div>
</EditForm>

@code {

            [Parameter] public  Store store {get;set;}
            [Parameter] public EventCallback OnValidSubmit { get; set; }
            string storeURL = "";
              protected override async Task OnInitializedAsync(){

                var shortName = await localStorage.GetItemAsStringAsync("storeShortName");
                storeURL = $"{nav.BaseUri}{shortName}";

              }

              private void HideModal()
              {
                      nav.NavigateTo("/CloseToStorProfile");
              }
        
        }
