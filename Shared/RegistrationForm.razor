


<EditForm Model="UserRegistration" OnValidSubmit="OnValidSubmit">
<DataAnnotationsValidator/>
<div class="container">
        <div class="row">
                <div class="col col-sm">
                    <div class="card align-middle shadow-lg p-3 mb-5 bg-body rounded">
                        <div class="card-body">
                            <div class="row">

                                <div class="col col-6 col-sm">
                                    <div class="login-form">
                                        <h1>Sign Up</h1>
                                        <div class="align-middle">
                                        I am already registed! <a href="/UserLogin">Log In</a>
                                        <br/>
                                        </div>
                                        <div class="input-group mb-3">
                                        <span class="input-group-text" id="basic-addon1"><i class="fas fa-envelope-open-text"></i> </span>
                                        <InputText type="email" placeholder ="Email" class="form-control" @bind-Value="@UserRegistration.Email"/>
                                        <div class="input-group mb-3">
                                            <ValidationMessage  For="@(() => UserRegistration.Email)" class="form-label" />
                                        </div>
                                        
                                        </div>
                                        <div class="input-group mb-3">
                                        <span class="input-group-text" id="basic-addon1"><i class="fas fa-key"></i> </span>
                                        <InputText  type="password" placeholder ="Password" class="form-control" @bind-Value="@UserRegistration.Password"/>
                                        <div class="input-group mb-3">
                                            <ValidationMessage   For="@(() => UserRegistration.Password)" class="form-label" />
                                        </div>
                                        
                                        </div>
                                        <div class="input-group mb-3">
                                        <span class="input-group-text" id="basic-addon1"><i class="fas fa-key"></i> </span>
                                        <InputText  type="password" placeholder ="Comfirm password" class="form-control" @bind-Value="@UserRegistration.ConfirmPassword"/>
                                        <div class="input-group mb-3">
                                            <ValidationMessage  For="@(() => UserRegistration.ConfirmPassword)" class="form-label"  />
                                        </div>
                                    
                                        </div>
                                        <br/>
                                        <button type="submit" class="btn btn-primary">Register</button>
                                        <br/>
                                        <div>
                                        <label>-Or Use-</label>
                                        </div>
                                        <div class="d-inline p-2">
                                            <a href="#"  ><i class="fab fa-facebook-square"></i></a>
                                        </div>
                                        <div class="d-inline p-2">
                                            <a href="#" ><i class="fab fa-instagram"></i></a>
                                        </div>
                                        <div class="d-inline p-2">
                                            <a href="#" ><i class="fab fa-google" style="font-size: 18px;"></i></a>
                                        </div>
                                    </div>
                                </div>    
                                <div class="col col-6 col-sm">
                                    
                                        <img src="images/signup-image.jpg" class="align-middle" />
                                    
                                </div> 
                        </div>
                    </div>
                </div>
        </div>
    </div> 
</div>
</EditForm>   

@code{
        [Parameter] public UserRegistrationData UserRegistration { get; set; }
        [Parameter] public EventCallback OnValidSubmit { get; set; }
    }
